{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2020",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "sourceMap": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noImplicitAny": true,
    "pretty": true,
    "lib": ["es2020"]
  },
  "include": [
    "services/**/*",
    "specs/**/*",
    "wsdls/**/*"
  ],
  "files": [
    "app.ts"
  ],
  "exclude": [
    "../node_modules",
    "../lib"
  ]
}
