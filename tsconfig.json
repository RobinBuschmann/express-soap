{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2020",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "sourceMap": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "declaration": true,
    "suppressImplicitAnyIndexErrors": true,
    "noImplicitAny": true,
    "pretty": true,
    "lib": ["es2020"]
  },
  "include": [
    "lib/**/*"
  ],
  "files": [
    "index.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
